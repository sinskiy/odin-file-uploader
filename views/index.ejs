<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: "Home" }) %>
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <nav>
        <a href="/files/upload">upload a file</a>
        <a href="/folders/create">create a folder</a>
      </nav>
      <h1>home</h1>
      <% if (locals.folders && folders.length > 0) { %>
      <h2>folders</h2>
      <ul role="list">
        <% folders.forEach(folder => { %>
        <li>
          <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
        </li>
        <% }) %>
      </ul>
      <% } %>
      <% if (locals.files && files.length > 0) { %>
      <h2>files</h2>
      <ul role="list">
        <% files.forEach(file => { %>
        <li>
          <a href="/files/<%= file.id %>"><%= file.originalName %></a>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </main>
  </body>
</html>
