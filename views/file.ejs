<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: locals.file ? file.originalName : "Home" }) %>
    <link rel="stylesheet" href="/file.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <h1><%= locals.title ??  'home' %></h1>
      <% if (locals.file) { %>
      <h2><%= file.originalName %></h2>
      <p>TODO: time</p>
      <p>TODO: size</p>
      <nav class="file-nav">
        <form action="" method="post">
          <button type="submit" class="primary">download</button>
        </form>
        <a href="/files/<%= file.id %>/rename">rename</a>
        <a href="/files/<%= file.id %>/delete">delete</a>
      </nav>
      <% } else { %>
      <h2>no file found</h2>
      <% } %>
    </main>
  </body>
</html>
